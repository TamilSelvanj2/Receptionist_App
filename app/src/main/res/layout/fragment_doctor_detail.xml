<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.doctor.DoctorDetailFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--            android:layout_centerInParent="true"-->

            <ProgressBar
                android:id="@+id/progressBarsDoctorDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_centerInParent="true"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_100sdp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOCTOR ID"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="start"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textColor="#AEAEAE"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doctorIDsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor ID"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#494949"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/linearLayout1"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="NAME"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#AEAEAE"
                    />




                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doctorNamesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_82sdp"
                    android:layout_gravity="center"
                    android:text="Doctor Name"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#494949"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/linearLayout2"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#AEAEAE"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doctorEmailsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Email"
                    android:layout_marginStart="@dimen/_81sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#494949"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/linearLayout3"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NUMBER"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#AEAEAE"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doctorNumbersTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Number"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#494949"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/linearLayout4"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GENDER"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#AEAEAE"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doctorGendersTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Number"
                    android:layout_marginStart="@dimen/_73sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#494949"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/linearLayout10"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUALIFICATION"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#AEAEAE"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/qualificationsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualification"
                    android:layout_marginStart="@dimen/_38sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#494949"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/linearLayout6"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPERIENCE"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#AEAEAE"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/experiencesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_52sdp"
                    android:text="Experience"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#494949"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/linearLayout7"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONSULTING FEES"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#AEAEAE"
                    android:fontFamily="sans-serif-medium"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/consultingFeessTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:textStyle="bold"
                    android:text="Consulting Fees"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#494949"
                    />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear_Layout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/linearLayout5"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="SPECIALITY"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#AEAEAE"
                    />



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doctorSpecailtysTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speciality"
                    android:layout_marginStart="@dimen/_56sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#494949"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_below="@id/linear_Layout8"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KNOWNLANGUAGES"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#AEAEAE"
                    android:fontFamily="sans-serif-medium"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doctors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Known Languages"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#494949"
                    android:fontFamily="sans-serif-medium"
                    />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>