<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/frameLayoutContainers"
    tools:context=".fragment.appointment.AppointmentFragment">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabSelectedTextColor="#050345"
        app:tabTextColor="#07518F"
        app:tabIndicatorColor="#030C45"
        app:tabTextAppearance="@style/Active"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout" />

  </RelativeLayout>
</FrameLayout>