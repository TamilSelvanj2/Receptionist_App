<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="8dp"
        android:background="#FFFFFF"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp">

            <LinearLayout
                android:id="@+id/linearUpcomingPatient"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="10dp"
                    android:textColor="#07518F"
                    android:text="APPOINTMENT ID :"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewAppointmentIdNewRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:textColor="#07518F"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:id="@+id/underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/linearUpcomingPatient"
                android:background="#DDDDDD" />
            <LinearLayout
                android:id="@+id/linearLayout1NewRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearUpcomingPatient"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOCTOR"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#AEAEAE" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDoctorNameNewRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:textSize="13sp"
                android:textColor="#07518F"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewWaitingNameNewRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:text="Waiting For Doctor confirmation"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="13sp"
                android:layout_below="@+id/underline"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout2NewRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearUpcomingPatient"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPECIALITY"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textColor="#AEAEAE" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewSpecialityNewRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="13sp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout3NewRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout2NewRequest"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PATIENT"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#AEAEAE" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPatientNameNewRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:textSize="13sp"
                    android:textColor="#07518F"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewStatusNewRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@+id/linearLayout3NewRequest"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>