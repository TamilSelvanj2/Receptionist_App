<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/border_rejected"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearUpcomingPatient"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="10dp"
                    android:textColor="#07518F"
                    android:text="APPOINTMENT ID :"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewAppointmentIdRejected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#07518F"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:id="@+id/underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/linearUpcomingPatient"
                android:background="#DDDDDD" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewWaitingNameRejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:visibility="gone"
                android:fontFamily="sans-serif-medium"
                android:text="Waiting For Doctor confirmation"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@+id/underline"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayout2Rejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/linearUpcomingPatient"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOCTOR"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:textColor="#AEAEAE" />


                <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDoctorNameRejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="sans-serif-medium"
                android:textColor="#07518F"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout3Rejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/underline"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEPCIALITY"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:textColor="#AEAEAE" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewSpeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4Rejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout3Rejected"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PATIENT"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:textColor="#AEAEAE" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewPatientNameRejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#07518F"
                android:layout_gravity="center"
                android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout5Rejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout4Rejected"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="7dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="REASON"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#AEAEAE"
                    android:textSize="@dimen/_10sdp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_27sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/underlinebottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/linearLayout5Rejected"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#DDDDDD" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewStatusRejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="15sp"
                android:textColor="#F14647"
                android:text="cancel"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/underlinebottom"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>